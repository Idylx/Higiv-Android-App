<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AboutSettings.Settings">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/ChooseLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:text="@string/ChooseLanguage"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageButton
                android:id="@+id/ButtonFrench"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundcorner"
                android:scaleType="fitXY"
                android:src="@drawable/france"

                app:layout_constraintTop_toBottomOf="@+id/DeleteUser"
                tools:layout_editor_absoluteX="142dp" />

            <ImageButton
                android:id="@+id/ButtonEnglish"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundcorner"
                android:scaleType="fitXY"
                android:src="@drawable/gb"
                app:layout_constraintTop_toBottomOf="@+id/DeleteUser"
                tools:layout_editor_absoluteX="142dp" />

            <ImageButton
                android:id="@+id/ButtonGerman"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/roundcorner"
                android:scaleType="fitXY"
                android:src="@drawable/germany"
                app:layout_constraintTop_toBottomOf="@+id/DeleteUser"
                tools:layout_editor_absoluteX="142dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/DeleteUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="@string/DeleteUserSettings"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />
            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/ic_delete_black_24dp"
                app:layout_constraintTop_toBottomOf="@+id/DeleteUser"
                tools:layout_editor_absoluteX="142dp" />




    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>